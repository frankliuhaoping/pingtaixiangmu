					</div>
                  <!--所属单位代码  -->
					<div class="form-group col-sm-6">
						<label for="ssdwdm" class="col-sm-3 control-label"> <spring:message code="pubRyxx.ssdwdm" />: </label>
						<div class="col-sm-9">
							<input id="ssdwdm" name="ssdwdm" class="form-control" readonly="readonly">
						</div>
					</div>
               <!-- 所属单位名称 -->
					<div class="form-group col-sm-6">
						<label for="ssdwmc" class="col-sm-3 control-label"> <spring:message code="pubRyxx.ssdwmc" />: </label>
						<div class="col-sm-9">
							<input id="ssdwmc" name="ssdwmc" class="form-control" readonly="readonly" >
						</div>
					</div>
                    <!-- 警务通号码 -->
					<div class="form-group col-sm-6">
						<label for="jwthm" class="col-sm-3 control-label"> <spring:message code="pubRyxx.jwthm" />:</label>
						<div class="col-sm-9">
